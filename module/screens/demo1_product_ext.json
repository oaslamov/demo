{
  "code":"demo1_product_ext:scr@demo1_prvt",
  "label":"$l{Product (extended info)}l",
  "serverStatus":"r",
  "subject":"$l{Demo1}l",
  "sort_order":"Z50",
  "grid":{
    "base":"screen",
    "cols":240,
    "rows":240
  },
  "data_sources":[
    {
      "code":"ds_product",
      "table_name":"Demo1_Prvt.Product",
      "type":"table",
      "fields":[
        {
          "code":"id",
          "type":"string"
        },
        {
          "code":"name",
          "label":"$l{f:7ef07d007006}l",
          "type":"string",
          "hint":"$l{f:7ef07d007006:d}l"
        },
        {
          "code":"price",
          "label":"$l{f:7ef07d007009}l",
          "type":"number",
          "hint":"$l{f:7ef07d007009:d}l"
        },
        {
          "code":"product_type",
          "label":"$l{f:7ef07d007008}l",
          "type":"enum",
          "enum":[
            {
              "label":"$l{e:7ef07d007008.T}l",
              "value":"T"
            },
            {
              "label":"$l{e:7ef07d007008.B}l",
              "value":"B"
            },
            {
              "label":"$l{e:7ef07d007008.G}l",
              "value":"G"
            }
          ],
          "hint":"$l{f:7ef07d007008:d}l"
        },
        {
          "code":"url",
          "label":"$l{f:7ef07d00700a}l",
          "type":"string",
          "edit_condition":"false",
          "hint":"$l{f:7ef07d00700a:d}l"
        }
      ],
      "operations":{
        "new":{
          "request":{
            "data":{
              "action":"demo1_prvt.new",
              "args":{
                "tablename":"demo1_prvt.product"
              }
            }
          }
        },
        "select":{
          "request":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "${@user_filter}"
                ],
                "tablename":"demo1_prvt.product"
              }
            }
          }
        },
        "insert":{
          "request":{
            "data":{
              "action":"demo1_prvt.insert",
              "args":{
                "tablename":"demo1_prvt.product",
                "fields":"${@all_fields}"
              }
            }
          }
        },
        "update":{
          "request":{
            "data":{
              "action":"demo1_prvt.update",
              "args":{
                "tablename":"demo1_prvt.product",
                "fields":"${@all_fields}"
              }
            }
          }
        },
        "delete":{
          "request":{
            "data":{
              "action":"demo1_prvt.deleteById",
              "args":{
                "id":"${id}",
                "tablename":"demo1_prvt.product"
              }
            }
          }
        }
      },
      "actions":[
        {
          "code":"openLink",
          "label":"$l{Open link}l",
          "data_scope":"row",
          "request":{
            "data":{
              "action":"gui.goLink",
              "args":{
                "url":"${(-q)ds_product.url}"
              }
            }
          }
        },
        {
          "code":"ac_det",
          "label":"$l{Details}l",
          "data_scope":"row",
          "request":{
            "data":{
              "action":"gui.goScreen",
              "args":{
                "screenId":"demo1_p_details:scr@demo1_prvt",
                "args":{
                  "product_id":"${ds_product.id}",
                  "product_name":"${ds_product.name}"
                },
                "mode":"popup"
              }
            }
          }
        }
      ]
    },
    {
      "code":"ds_att_file",
      "table_name":"Demo1_Prvt.Att_File",
      "type":"table",
      "fields":[
        {
          "code":"id",
          "type":"string"
        },
        {
          "code":"name",
          "label":"$l{File name}l",
          "type":"string",
          "hint":"$l{f:7ef07d021006:d}l"
        },
        {
          "code":"ref_code",
          "label":"$l{f:7ef07d021009}l",
          "type":"string",
          "hint":"$l{f:7ef07d021009:d}l"
        },
        {
          "code":"ref_id",
          "label":"$l{f:7ef07d021008}l",
          "type":"bigint",
          "hint":"$l{f:7ef07d021008:d}l"
        },
        {
          "code":"upload_date",
          "label":"$l{f:7ef07d021007}l",
          "type":"datetime",
          "hint":"$l{f:7ef07d021007:d}l"
        }
      ],
      "operations":{
        "new":{
          "request":{
            "data":{
              "action":"demo1_prvt.new",
              "args":{
                "tablename":"demo1_prvt.att_file",
                "fields":{
                  "ref_id":"${ds_product.id}",
                  "ref_code":"product"
                }
              }
            }
          }
        },
        "select":{
          "request":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "ref_id=${ds_product.id} and ref_code='product'"
                ],
                "tablename":"demo1_prvt.att_file"
              }
            },
            "dependencies":[
              "ds_product.id"
            ]
          }
        },
        "insert":{
          "request":{
            "data":{
              "action":"demo1_prvt.insert",
              "args":{
                "tablename":"demo1_prvt.att_file",
                "fields":"${@all_fields}"
              }
            }
          }
        },
        "update":{
          "request":{
            "data":{
              "action":"demo1_prvt.update",
              "args":{
                "tablename":"demo1_prvt.att_file",
                "fields":"${@all_fields}"
              }
            }
          }
        },
        "delete":{
          "request":{
            "data":{
              "action":"demo1_prvt.deleteById",
              "args":{
                "id":"${id}",
                "tablename":"demo1_prvt.att_file"
              }
            }
          }
        }
      },
      "actions":[
        {
          "code":"upload",
          "label":"$l{Upload}l",
          "type":"file_upload",
          "data_scope":"row",
          "request":{
            "data":{
              "action":"common.upload",
              "args":{
                "filename":"${@name}",
                "dataTableName":"demo1_prvt.att_file_data",
                "data":"${@bytes}",
                "infoTableRowId":"${ds_att_file.id}",
                "fileTimeMillis":"${@filetime}"
              }
            }
          },
          "freshen":[
            {
              "type":"current_row"
            }
          ]
        },
        {
          "code":"download",
          "label":"$l{Download}l",
          "data_scope":"row",
          "request":{
            "data":{
              "action":"common.download",
              "args":{
                "dataTableName":"demo1_prvt.att_file_data",
                "infoTableRowId":"${ds_att_file.id}"
              }
            }
          }
        }
      ]
    }
  ],
  "parts":[
    {
      "code":"p_main",
      "type":"table",
      "border_type":"none",
      "position":{
        "from_col":1,
        "to_col":120,
        "from_row":1,
        "to_row":240
      },
      "data_source":{
        "code":"ds_product",
        "fields":[
          {
            "code":"name",
            "width":"30%"
          },
          {
            "code":"price",
            "width":"10%"
          },
          {
            "code":"product_type",
            "width":"10%"
          }
        ],
        "order":[
          {
            "field":"name"
          }
        ],
        "operations":[
          "new",
          "select",
          "insert",
          "update",
          "delete"
        ],
        "actions":[
          "openLink",
          "ac_det"
        ]
      }
    },
    {
      "code":"p_att",
      "type":"table",
      "border_type":"none",
      "position":{
        "from_col":121,
        "to_col":240,
        "from_row":1,
        "to_row":120
      },
      "data_source":{
        "code":"ds_att_file",
        "fields":[
          {
            "code":"name"
          },
          {
            "code":"upload_date"
          }
        ],
        "operations":[
          "new",
          "select",
          "insert",
          "update",
          "delete"
        ],
        "actions":[
          "upload",
          "download"
        ]
      }
    }
  ]
}