{
  "code":"demo1_product:scr@demo1_prvt",
  "label":"$l{Product}l",
  "subject":"$l{Demo1}l/$l{Product}l",
  "sort_order":"Z20.1",
  "grid":{
    "base":"screen",
    "cols":240,
    "rows":240
  },
  "data_sources":[
    {
      "code":"product",
      "table_name":"Demo1_Prvt.Product",
      "type":"table",
      "fields":[
        {
          "code":"id",
          "type":"string"
        },
        {
          "code":"name",
          "label":"$l{f:7ef07d007006}l",
          "type":"string",
          "hint":"$l{f:7ef07d007006:d}l"
        },
        {
          "code":"price",
          "label":"$l{f:7ef07d007009}l",
          "type":"number",
          "hint":"$l{f:7ef07d007009:d}l"
        },
        {
          "code":"product_type",
          "label":"$l{f:7ef07d007008}l",
          "type":"enum",
          "enum":[
            {
              "label":"$l{e:7ef07d007008.T}l",
              "value":"T"
            },
            {
              "label":"$l{e:7ef07d007008.B}l",
              "value":"B"
            },
            {
              "label":"$l{e:7ef07d007008.G}l",
              "value":"G"
            }
          ],
          "hint":"$l{f:7ef07d007008:d}l"
        },
        {
          "code":"url",
          "label":"$l{f:7ef07d00700a}l",
          "type":"string",
          "edit_condition":"false",
          "hint":"$l{f:7ef07d00700a:d}l"
        }
      ],
      "operations":{
        "new":{
          "request":{
            "data":{
              "action":"demo1_prvt.new",
              "args":{
                "tablename":"demo1_prvt.product"
              }
            }
          }
        },
        "select":{
          "request":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "${@user_filter}"
                ],
                "tablename":"demo1_prvt.product"
              }
            }
          }
        },
        "insert":{
          "request":{
            "data":{
              "action":"demo1_prvt.insert",
              "args":{
                "tablename":"demo1_prvt.product",
                "fields":"${@all_fields}"
              }
            }
          }
        },
        "update":{
          "request":{
            "data":{
              "action":"demo1_prvt.update",
              "args":{
                "tablename":"demo1_prvt.product",
                "fields":"${@all_fields}"
              }
            }
          }
        },
        "delete":{
          "request":{
            "data":{
              "action":"demo1_prvt.deleteById",
              "args":{
                "id":"${id}",
                "tablename":"demo1_prvt.product"
              }
            }
          }
        }
      },
      "actions":[
        {
          "code":"openLink",
          "label":"$l{Open link}l",
          "data_scope":"row",
          "request":{
            "data":{
              "action":"gui.goLink",
              "args":{
                "url":"${(-q)product.url}"
              }
            }
          }
        }]
    }
  ],
  "parts":[
    {
      "code":"p_main",
      "type":"table",
      "border_type":"none",
      "position":{
        "from_col":1,
        "to_col":240,
        "from_row":1,
        "to_row":240
      },
      "data_source":{
        "code":"product",
        "fields":[
          {
            "code":"name",
            "width":"30%"
          },
          {
            "code":"price",
            "width":"10%"
          },
          {
            "code":"product_type",
            "width":"10%"
          },
          {
            "code":"url",
            "cell_template":"<a href=\"${url}\" target=\"_blank\" rel=\"noopener noreferrer\">${url}</a>"
          }
        ],
        "order":[
          {
            "field":"name"
          }
        ],
        "operations":[
          "new",
          "select",
          "insert",
          "update",
          "delete"
        ],
        "actions":[
          "openLink"
        ]
      }
    }
  ]
}