    }
  ],
  "grid":{
    "base":"screen",
    "cols":16,
    "rows":16
  },
  "data_sources":[
    {
      "code":"ds_c",
      "table_name":"Demo1_Prvt.Customer",
      "type":"table",
      "fields":[
        {
          "code":"address_line1",
          "label":"$l{f:7ef07d006008}l",
