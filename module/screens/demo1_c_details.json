        {
          "code":"subcountry",
          "label":"$l{f:7efd8900600e}l",
          "type":"ref",
          "ref":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "${@ref_filter}",
                  "country=${ds_c.country}"
                ],
                "tablename":"Demo1_Prvt.Subcountry"
              },
              "fields":[
                "id",
                "@name"
              ]
            },
            "dependencies":[
              "ds_c.country"
            ]
          },
          "edit_condition":"false",
          "hint":"$l{f:7efd8900600e:d}l"
        },
        {
          "code":"category",
          "label":"$l{f:7efd89006016}l",
          "type":"ref",
          "format":"tree",
          "ref":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "${@ref_filter}"
                ],
                "tablename":"Demo1_Prvt.Customer_Category"
              },
              "fields":[
                "id",
                "@name",
                "@parent"
              ]
            }
          },
          "hint":"$l{f:7efd89006016:d}l"
        }
      ],
      "operations":{
        "select":{
          "request":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "id=${@screen.id}"
                ],
                "tablename":"demo1_prvt.customer"
              }
            }
          }
        },
        "update":{
          "request":{
            "data":{
              "action":"demo1_prvt.update",
              "args":{
                "tablename":"demo1_prvt.customer",
                "fields":"${@all_fields}"
              }
            }
          }
        }
      },
      "actions":[
        {
          "code":"select_category",
          "icon":"fas fa-search-plus",
          "request":{
            "data":{
              "action":"gui.goScreen",
              "args":{
                "args":"",
                "mode":"selector",
                "screenId":"sc_customer_category:scr@demo1_prvt"
              }
            }
          },
          "target":{
            "ds":"ds_c",
            "field":"category",
            "mode":"replace"
          }
        },
        {
          "code":"select_country",
          "icon":"fas fa-search-plus",
          "request":{
            "data":{
              "action":"gui.goScreen",
              "args":{
                "args":"",
                "mode":"selector",
                "screenId":"dyn:tab_view:Demo1_Prvt.Country:scr@std"
              }
            }
          },
          "target":{
            "ds":"ds_c",
            "field":"country",
            "mode":"replace"
          }
        }
      ]
    }
  ],
  "parts":[
    {
      "code":"p_main",
      "type":"form",
      "border_type":"none",
      "position":{
        "from_col":1,
        "to_col":8,
