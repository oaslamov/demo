                "tablename":"Demo1_Prvt.City"
              },
              "fields":[
                "id",
                "@name"
              ]
            },
            "dependencies":[
              "ds_c.country"
            ]
          },
          "hint":"$l{f:7efd89006010:d}l"
        },
        {
          "code":"country",
          "label":"$l{f:7efd8900600c}l",
