          "label":"$l{f:7efd89006010}l",
          "type":"ref",
          "ref":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "${@ref_filter}",
                  "country=${ds_c.country}"
