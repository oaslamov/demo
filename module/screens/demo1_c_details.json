          },
          {
            "code":"mobile"
          },
          {
            "code":"address_line1"
          },
          {
            "code":"address_line2"
          },
          {
            "code":"address_line3"
          },
          {
            "code":"category",
            "actions":[
              "select_category"
            ]
          },
          {
            "code":"country",
            "actions":[
              "select_country"
            ]
          },
          {
            "code":"subcountry"
          },
          {
            "code":"city"
          }
        ],
        "operations":[
          "select",
          "update"
        ]
      }
