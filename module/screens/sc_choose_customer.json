          "type":"string",
          "hint":"$l{f:7ef07d006007:d}l"
        }
      ],
      "operations":{
        "select":{
          "request":{
            "data":{
              "action":"demo1_prvt.selectList",
              "args":{
                "filter":[
                  "${@user_filter}",
                  "order by name"
                ],
                "tablename":"demo1_prvt.customer"
              }
            }
          }
        }
      },
      "actions":[
        {
          "code":"submit",
          "label":"$l{Choose this customer}l",
          "type":"ok",
          "data_scope":"row",
          "request":{
            "data":{
              "action":"demo1_prvt.update",
              "args":{
                "fields":{
                  "${@screen.field}":"${ds_c.id}",
                  "id":"${@screen.id}"
                },
                "tableName":"${@screen.tableName}"
              }
            }
          }
        }
      ]
    }
  ],
  "parts":[
    {
      "code":"p_main",
      "type":"table",
      "border_type":"none",
      "position":{
        "from_col":1,
        "to_col":4,
